<header class="page-header">
  <h1>Signup!</h1>
</header>

<div class="col-sm-5">
  <%= form_for :user, url: '/users' do |u| %>

    <div class="form-group">
      <%= u.label :name %>
      <%= u.text_field :name %>
    </div>
    <div class="form-group">
      <%= u.label :email %>
      <%= u.text_field :email %>
    </div>
    <div class="form-group">
      <%= u.label :password %>
      <%= u.password_field :password %>
    </div>
    <div class="form-group">
      <%= u.label :password_confirmation %>
      <%= u.password_field :password_confirmation %>
    </div>
    <%= u.submit "Submit", class: 'btn btn-primary' %>
  <% end %>
</div> 